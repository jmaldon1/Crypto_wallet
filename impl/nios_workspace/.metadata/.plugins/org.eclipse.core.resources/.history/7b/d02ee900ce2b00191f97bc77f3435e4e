#include <stdio.h>
#include <unistd.h>
#include <string.h>

#include "system.h"
#include "altera_avalon_pio_regs.h"
#include "sys/alt_sys_wrappers.h"
#include "alt_types.h"

#include "uart_usb.h"
#include "rand.h"


int main()
{
    printf("Hello from Nios II!\n");

    alt_u64 randSeed = 0x12345678abcdef01;

    initRandom(randSeed);

    initUart();
    PutStrUart("Hello from NIOS II UART console\n");

	alt_u8 count = 0;
	alt_u32 randVal;
	char message[1024];
    while(1)
    {
    	uartGetLine();
		count++;
		if (count % 10000 == 0)
		{
	    	randVal = u32getRandom();
	    	IOWR_ALTERA_AVALON_PIO_DATA(PO_LED_BASE, randVal & 0xFF);
	    	sprintf((char *)&(message[0]), 1024, "%d\n", randVal);
	    	PutStrUart((char *)&(message[0]));
		}
		ALT_USLEEP(100);
    }

//    closeUart();
    return 0;
}

